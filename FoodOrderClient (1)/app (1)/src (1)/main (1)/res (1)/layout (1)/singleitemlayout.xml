<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:layout_margin="5dp"
    tools:context="com.example.user.foodorderclient.MenuActivity">

    <android.support.v7.widget.CardView
        android:layout_height="100dp"
        android:layout_width="match_parent"
        >
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_height="121dp"
            android:layout_width="match_parent"
            android:background="#c89e0002">

            <ImageView
                android:layout_height="160dp"
                android:layout_width="150dp"
                android:background="@drawable/bbb"
                android:id="@+id/breadImage"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/breadName"
                android:layout_marginTop="12dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:layout_toEndOf="@id/breadImage"
                android:textSize="30dp"
                android:text="Butter Bread"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="200dp"
                android:id="@+id/breadDesc"
                android:text="Butter,cheese,sweet"
                android:layout_marginLeft="12dp"
                android:layout_below="@id/breadName"
                android:layout_toRightOf="@id/breadImage"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/breadPrice"
                android:textColor="#4CAF50"
                android:textSize="20dp"
                android:text="20taka"
                android:layout_below="@id/breadDesc"
                android:layout_alignEnd="@id/breadDesc"
                android:textStyle="bold|italic"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>